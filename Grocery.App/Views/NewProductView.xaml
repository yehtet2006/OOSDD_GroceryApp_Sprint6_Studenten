<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Grocery.App.ViewModels"
             x:Class="Grocery.App.Views.NewProductView"
             x:DataType="vm:NewProductViewModel"
             Title="NewProductView">
    <ContentPage.Content>
        <VerticalStackLayout Padding="20" Spacing="15">
            <Entry Placeholder="Naam" Text="{Binding Name}" />
            <Entry Placeholder="Voorraad" Text="{Binding Stock}" Keyboard="Numeric" />
            <Entry Placeholder="THT (yyyy-MM-dd)" Text="{Binding Shelflife}" />
            <Entry Placeholder="Prijs" Text="{Binding Price}" Keyboard="Numeric" />
            <Button Text="Toevoegen" Command="{Binding AddProductCommand}" />
            <Label Text="{Binding ErrorMessage}" TextColor="Red" />
            <Label Text="{Binding Message}" TextColor="LawnGreen" />
        </VerticalStackLayout>
    </ContentPage.Content>
</ContentPage>